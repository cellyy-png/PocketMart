.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-top: 20rpx;
}

.menu-list {
  background: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  color: #333;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #fafafa;
}

.arrow {
  color: #ccc;
  font-size: 32rpx;
}

.value {
  color: #999;
  font-size: 28rpx;
}

.footer-btn {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.logout-btn {
  background: #fff;
  color: #ff4d4f;
  font-size: 32rpx;
  border-radius: 8rpx;
}
.logout-btn::after {
  border: none;
}