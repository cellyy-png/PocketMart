/* pages/category/category.wxss */
.container {
    height: 100vh;
    background: #f5f5f5;
  }
  
  .category-wrapper {
    display: flex;
    height: 100%;
  }
  
  .left-menu {
    width: 180rpx;
    background: #fff;
    border-right: 1rpx solid #eee;
  }
  
  .menu-item {
    height: 96rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #333;
    position: relative;
  }
  
  .menu-item.active {
    background: #f5f5f5;
    color: #ff6b6b;
    font-weight: bold;
  }
  
  .menu-item.active::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6rpx;
    height: 40rpx;
    background: #ff6b6b;
    border-radius: 0 3rpx 3rpx 0;
  }
  
  .right-content {
    flex: 1;
    background: #f5f5f5;
  }
  
  .goods-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
    padding: 20rpx;
  }
  
  .goods-item {
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
  }
  
  .goods-image {
    width: 100%;
    height: 340rpx;
    background: #f5f5f5;
  }
  
  .goods-info {
    padding: 20rpx;
  }
  
  .goods-name {
    font-size: 28rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    min-height: 80rpx;
  }
  
  .goods-price {
    margin-top: 12rpx;
  }
  
  .price-num {
    font-size: 36rpx;
    color: #ff6b6b;
    font-weight: bold;
  }
  
  .tip-text {
    text-align: center;
    padding: 40rpx 0;
    font-size: 24rpx;
    color: #999;
  }