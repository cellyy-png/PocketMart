.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #fff;
  }
  
  .header {
    padding: 16rpx 30rpx;
    border-bottom: 1rpx solid #f5f5f5;
    background: #fff;
  }
  
  .search-box {
    background: #f5f5f5;
    height: 64rpx;
    border-radius: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #999;
  }
  
  .search-box icon {
    margin-right: 10rpx;
  }
  
  .content {
    flex: 1;
    display: flex;
    overflow: hidden;
  }
  
  /* 左侧导航 */
  .left-nav {
    width: 180rpx;
    background: #f8f8f8;
    height: 100%;
  }
  
  .nav-item {
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #666;
    position: relative;
  }
  
  .nav-item.active {
    background: #fff;
    font-weight: bold;
    color: #ff6b6b;
    font-size: 30rpx;
  }
  
  .indicator {
    position: absolute;
    left: 0;
    top: 30rpx;
    bottom: 30rpx;
    width: 8rpx;
    background: #ff6b6b;
    border-top-right-radius: 4rpx;
    border-bottom-right-radius: 4rpx;
  }
  
  /* 右侧内容 */
  .right-content {
    flex: 1;
    background: #fff;
    padding: 20rpx;
    box-sizing: border-box;
  }
  
  .cate-banner {
    width: 100%;
    height: 200rpx;
    border-radius: 12rpx;
    overflow: hidden;
    margin-bottom: 30rpx;
    background: #f0f0f0;
  }
  
  .cate-banner image {
    width: 100%;
    height: 100%;
  }
  
  .sub-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between; /* 两端对齐 */
  }
  
  /* 【修改】商品卡片样式 */
  .sub-item {
    width: 48%; /* 一行两个 */
    display: flex;
    flex-direction: column;
    /* align-items: center;  去掉居中，让文字靠左或默认对齐更像商品列表 */
    margin-bottom: 30rpx;
  }
  
  /* 【修改】图片高度和圆角 */
  .sub-icon {
    width: 100%;
    height: 200rpx; /* 固定高度 */
    margin-bottom: 12rpx;
    border-radius: 8rpx;
    background-color: #f9f9f9;
  }
  
  .sub-name {
    font-size: 26rpx;
    color: #333;
    /* 限制文字行数 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
  }
  
  /* 【新增】价格样式 */
  .sub-price {
    font-size: 28rpx;
    color: #ff4444;
    font-weight: bold;
    margin-top: 6rpx;
  }
  
  .empty-cate {
    text-align: center;
    color: #ccc;
    font-size: 26rpx;
    margin-top: 100rpx;
  }