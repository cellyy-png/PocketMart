.container {
  height: 100vh;
  display: flex;
  background: #f8f8f8;
}

/* 左侧菜单 */
.left-menu {
  width: 180rpx;
  height: 100%;
  background: #fff;
  border-right: 1rpx solid #f0f0f0;
}

.menu-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  background: #f8f8f8;
}

.menu-item.active {
  background: #fff;
  color: #333;
  font-weight: bold;
}

.menu-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 30rpx;
  bottom: 30rpx;
  width: 6rpx;
  background: #ff6b6b;
  border-radius: 0 4rpx 4rpx 0;
}

/* 右侧内容 */
.right-content {
  flex: 1;
  height: 100%;
  background: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.category-title {
  padding: 30rpx 0;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 商品列表 */
.goods-list {
  padding-bottom: 40rpx;
}

.goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-desc {
  font-size: 22rpx;
  color: #999;
  margin-bottom: auto;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  color: #ff6b6b;
  font-weight: bold;
}

.symbol {
  font-size: 24rpx;
}

.num {
  font-size: 32rpx;
}

.add-cart-btn {
  width: 48rpx;
  height: 48rpx;
  background: #ff6b6b;
  border-radius: 50%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  line-height: 1;
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

.loading-more, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #ccc;
  font-size: 24rpx;
}