<view class="container">
  <!-- 左侧分类菜单 -->
  <scroll-view class="left-menu" scroll-y>
    <view 
      wx:for="{{categories}}" 
      wx:key="id" 
      class="menu-item {{currentCategoryId === item.id ? 'active' : ''}}"
      data-id="{{item.id}}"
      bindtap="onCategoryTap"
    >
      <view class="menu-text">{{item.name}}</view>
    </view>
  </scroll-view>

  <!-- 右侧商品列表 -->
  <scroll-view class="right-content" scroll-y bindscrolltolower="onReachBottom">
    <view class="category-title">
      <text>{{currentCategoryName}}</text>
    </view>

    <view class="goods-list" wx:if="{{products.length > 0}}">
      <view 
        class="goods-item" 
        wx:for="{{products}}" 
        wx:key="id"
        bindtap="onGoodsTap"
        data-id="{{item.id}}"
      >
        <image class="goods-image" src="{{item.image}}" mode="aspectFill"></image>
        <view class="goods-info">
          <view class="goods-name">{{item.name}}</view>
          <view class="goods-desc">{{item.desc}}</view>
          <view class="goods-bottom">
            <view class="goods-price">
              <text class="symbol">¥</text>
              <text class="num">{{item.price}}</text>
            </view>
            <view class="add-cart-btn" catchtap="onAddToCart" data-item="{{item}}">
              +
            </view>
          </view>
        </view>
      </view>
    </view>

    <view class="empty-state" wx:elif="{{!loading}}">
      <text>该分类下暂无商品</text>
    </view>
    
    <view class="loading-more" wx:if="{{loading}}">加载中...</view>
    <view class="no-more" wx:if="{{!hasMore && products.length > 0}}">- 到底了 -</view>
  </scroll-view>
</view>