.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

.header-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.company-icon {
  width: 100rpx;
  height: 100rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}
.company-icon image {
  width: 60rpx;
  height: 60rpx;
}

.info {
  flex: 1;
}

.company-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.logistics-no {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.copy-btn {
  font-size: 20rpx;
  color: #333;
  border: 1rpx solid #ddd;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.official-phone {
  font-size: 24rpx;
  color: #999;
}

.trace-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  border-left: 6rpx solid #ff6b6b;
  padding-left: 20rpx;
}

.trace-item {
  position: relative;
  padding-left: 40rpx;
  padding-bottom: 40rpx;
}

.trace-item:last-child {
  padding-bottom: 0;
}

.dot {
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ddd;
  border-radius: 50%;
  z-index: 2;
}

.trace-item.active .dot {
  background: #ff6b6b;
  width: 24rpx;
  height: 24rpx;
  left: -4rpx;
  top: 4rpx;
  box-shadow: 0 0 10rpx rgba(255, 107, 107, 0.4);
}

.line {
  position: absolute;
  left: 7rpx;
  top: 20rpx;
  bottom: -20rpx;
  width: 2rpx;
  background: #eee;
  z-index: 1;
}

.desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.trace-item.active .desc {
  color: #333;
  font-weight: bold;
}

.time {
  font-size: 24rpx;
  color: #999;
}