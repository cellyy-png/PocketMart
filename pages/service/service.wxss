/* pages/service/service.wxss */
.container {
    padding: 30rpx;
    background-color: #f9f9f9;
    min-height: 100vh;
  }
  
  .header {
    margin-bottom: 40rpx;
    padding: 30rpx 0;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
    color: #999;
  }
  
  .contact-grid {
    display: flex;
    justify-content: space-between;
    margin-bottom: 50rpx;
  }
  
  .contact-item {
    width: 48%;
    background: #fff;
    padding: 30rpx;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
  }
  
  .contact-item:active {
    transform: scale(0.98);
  }
  
  /* 这里确保 icon 是文字大小，而不是图片 */
  .icon {
    font-size: 60rpx; 
    margin-bottom: 20rpx;
  }
  
  .label {
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 8rpx;
  }
  
  .desc {
    font-size: 24rpx;
    color: #999;
  }
  
  .faq-section {
    background: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
    border-left: 8rpx solid #ff6b6b;
    padding-left: 20rpx;
  }
  
  .faq-item {
    border-bottom: 1rpx solid #eee;
    padding: 30rpx 0;
  }
  
  .faq-item:last-child {
    border-bottom: none;
  }
  
  .question {
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
  }
  
  .arrow {
    color: #ccc;
    transition: transform 0.3s;
  }
  
  .arrow.up {
    transform: rotate(180deg);
  }
  
  .answer {
    margin-top: 20rpx;
    font-size: 26rpx;
    color: #666;
    line-height: 1.6;
  }