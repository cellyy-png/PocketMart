<view class="container">
  <view class="header-section">
    <view class="title-en">SERVICE CENTER</view>
    <view class="title-zh">客户服务</view>
    <view class="subtitle">How can we help you today?</view>
  </view>

  <view class="contact-grid">
    <view class="contact-card hover-scale" bindtap="toChat">
      <view class="icon-box">
        <image class="icon-img" src="/assets/images/icons/home.png" mode="aspectFit"/>
      </view>
      <view class="card-info">
        <text class="card-title">Online Chat</text>
        <text class="card-sub">在线咨询 (09:00-22:00)</text>
      </view>
      <view class="arrow-right"></view>
    </view>
    
    <view class="contact-card hover-scale" bindtap="onCall">
      <view class="icon-box">
        <image class="icon-img" src="/assets/images/icons/user.png" mode="aspectFit"/>
      </view>
      <view class="card-info">
        <text class="card-title">Phone Call</text>
        <text class="card-sub">电话专线 (400-123-4567)</text>
      </view>
      <view class="arrow-right"></view>
    </view>
  </view>

  <view class="faq-section">
    <view class="section-header">
      <text class="section-title">FAQ</text>
      <text class="section-desc">常见问题解答</text>
    </view>
    
    <view class="faq-list">
      <view class="faq-item {{item.open ? 'active' : ''}}" wx:for="{{faqs}}" wx:key="q" bindtap="toggleFaq" data-index="{{index}}">
        <view class="question-row">
          <text class="q-text">{{item.q}}</text>
          <view class="toggle-icon"></view>
        </view>
        <view class="answer-box" wx:if="{{item.open}}">
          <text class="a-text">{{item.a}}</text>
        </view>
      </view>
    </view>
  </view>
</view>