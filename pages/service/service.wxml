<view class="container">
  <view class="header">
    <view class="title">Hi, 需要什么帮助？</view>
    <view class="subtitle">我们将竭诚为您服务</view>
  </view>

  <view class="contact-grid">
    <view class="contact-item" bindtap="toChat">
      <view class="icon">💬</view>
      <view class="label">在线客服</view>
      <view class="desc">9:00 - 22:00</view>
    </view>
    
    <view class="contact-item" bindtap="onCall">
      <view class="icon">📞</view>
      <view class="label">电话客服</view>
      <view class="desc">400-123-4567</view>
    </view>
  </view>

  <view class="faq-section">
    <view class="section-title">常见问题</view>
    <view class="faq-list">
      <view class="faq-item" wx:for="{{faqs}}" wx:key="q" bindtap="toggleFaq" data-index="{{index}}">
        <view class="question">
          <text>{{item.q}}</text>
          <text class="arrow {{item.open ? 'up' : ''}}">⌄</text>
        </view>
        <view class="answer" wx:if="{{item.open}}">{{item.a}}</view>
      </view>
    </view>
  </view>
</view>