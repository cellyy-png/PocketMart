/* 页面容器 */
.container {
  background-color: var(--bg-color, #FDFCF8);
  min-height: 100vh;
  box-sizing: border-box;
}

/* --- 毛玻璃搜索栏 --- */
.glass-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 20rpx 30rpx;
  /* 日系磨砂质感 */
  background: rgba(253, 252, 248, 0.85);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}

.header-spacer {
  height: 112rpx;
}

.search-box {
  background: #F0F2F5; /* 冷灰对比暖底 */
  height: 72rpx;
  border-radius: 999px;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  transition: transform 0.2s;
}

.search-box:active {
  transform: scale(0.98);
  background: #E3E8EB;
}

.placeholder {
  font-size: 26rpx;
  color: #B2BEC3;
  margin-left: 16rpx;
  letter-spacing: 1rpx;
}

/* --- 轮播图 --- */
.banner-wrapper {
  padding: 20rpx 30rpx;
}

.banner-swiper {
  height: 320rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(107, 124, 133, 0.15); /* 柔和阴影 */
  transform: translateZ(0); /* 修复圆角溢出 */
}

.banner-img {
  width: 100%;
  height: 100%;
}

/* --- 导航区 --- */
.nav-section {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}

.nav-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}

.nav-icon-box {
  width: 96rpx;
  height: 96rpx;
  background: #FFFFFF;
  border-radius: 32rpx; /* 大圆角 */
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  /* 弥散阴影 */
  box-shadow: 0 4rpx 12rpx rgba(45, 52, 54, 0.05);
  transition: transform 0.2s;
}

.nav-item:active .nav-icon-box {
  transform: scale(0.92);
}

.nav-icon-text {
  font-size: 40rpx;
  color: var(--primary-color, #6B7C85);
  font-weight: 500;
  font-family: serif; /* 衬线体增加高级感 */
}

.nav-text {
  font-size: 22rpx;
  color: #636E72;
  letter-spacing: 1rpx;
}

/* --- 分区标题 --- */
.section-header {
  padding: 40rpx 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.en-title {
  font-size: 24rpx;
  color: var(--accent-color, #C58F78);
  letter-spacing: 4rpx;
  text-transform: uppercase;
  margin-bottom: 4rpx;
  font-weight: 600;
}

.zh-title {
  font-size: 34rpx;
  color: #2D3436;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* --- 商品网格 (Masonry-like Grid) --- */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 30rpx;
}

.product-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(45, 52, 54, 0.04);
  transition: opacity 0.2s;
}

.product-card:active {
  opacity: 0.8;
}

.image-wrapper {
  position: relative;
  padding-bottom: 100%; /* 1:1 正方形 */
  background: #F5F5F3;
}

.p-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.p-info {
  padding: 20rpx;
}

.p-name {
  font-size: 26rpx;
  color: #2D3436;
  line-height: 1.5;
  height: 78rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 16rpx;
}

.p-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.price-group {
  color: var(--accent-color, #C58F78);
  font-family: 'DIN Alternate', sans-serif;
  line-height: 1;
}

.symbol {
  font-size: 22rpx;
  margin-right: 2rpx;
}

.num {
  font-size: 34rpx;
  font-weight: 600;
}

.sales-tag {
  font-size: 20rpx;
  color: #B2BEC3;
  font-weight: 300;
}

/* 底部 */
.loading-state {
  padding: 40rpx 0 80rpx;
}

.no-more {
  text-align: center;
  color: #B2BEC3;
  font-size: 22rpx;
  letter-spacing: 2rpx;
}