.container {
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 搜索栏 */
.search-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #fff;
  padding: 20rpx 30rpx;
}

.search-bar {
  background: #f5f5f5;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #999;
  margin-left: 16rpx;
}

/* 轮播图 */
.banner-swiper {
  height: 300rpx;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  transform: translateY(0); /* 修复圆角在某些机型失效 */
}

.banner-img {
  width: 100%;
  height: 100%;
}

/* 导航入口 */
.nav-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 20rpx;
  background: #fff;
  margin: 0 30rpx 20rpx;
  border-radius: 20rpx;
}

.nav-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 0;
}

.nav-icon-bg {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.nav-icon-text {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.nav-text {
  font-size: 24rpx;
  color: #333;
}

/* 推荐标题 */
.section-title {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.section-title .title {
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
  padding: 0 30rpx;
}

.section-title .title::before,
.section-title .title::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 40rpx;
  height: 2rpx;
  background: #ccc;
}
.section-title .title::before { left: -20rpx; }
.section-title .title::after { right: -20rpx; }

/* 商品列表（瀑布流/双列） */
.product-list {
  padding: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-item {
  width: 335rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}

.p-img {
  width: 100%;
  height: 335rpx;
  background: #f0f0f0;
}

.p-info {
  padding: 16rpx 20rpx 0;
}

.p-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  height: 78rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.p-price-row {
  margin-top: 16rpx;
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
  color: #ff4d4f;
}

.price-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-right: 16rpx;
}

.sales {
  font-size: 22rpx;
  color: #999;
}

.no-more {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 30rpx 0 60rpx;
}