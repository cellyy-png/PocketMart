<view class="container" wx:if="{{orderInfo}}">
<view class="count-down">
  <text>支付剩余时间 </text>
  <text class="time">{{remainingTime}}</text>
</view>

  <view class="price-card">
    <view class="label">需支付</view>
    <view class="price">
      <text class="symbol">¥</text>
      <text class="num">{{orderInfo.totalPrice}}</text>
    </view>
    <view class="order-no">订单号: {{orderInfo.orderNo}}</view>
  </view>

  <view class="payment-group">
    <view class="group-title">选择支付方式</view>
    
    <view class="pay-item" bindtap="onSelectMethod" data-method="wechat">
      <view class="left">
        <image class="icon" src="data:image/svg+xml;base64," />
        <text class="name">微信支付</text>
      </view>
      <radio checked="{{paymentMethod === 'wechat'}}" color="#07c160"/>
    </view>

    <view class="pay-item" bindtap="onSelectMethod" data-method="balance">
      <view class="left">
        <image class="icon" src="data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAyNCAyNCIgZmlsbD0iI2ZmOTgwMCI+PHBhdGggZD0iTTIxIDE4VjE5QzIxIDE5LjU1IDIwLjU1IDIwIDIwIDIwSDRDMy40NSAyMCAzIDE5LjU1IDMgMTlWN0MzIDYuNDUgMy40NSA2IDQgNkg1VjRDNSAzLjQ1IDUuNDUgMyA2IDNIMjBDMjAuNTUgMyAyMSAzLjQ1 2MSA0VjZIMjJDMjIuNTUgNiAyMyA2LjQ1IDIzIDdWMTdDMjMgMTcuNTUgMjIuNTUgMTggMjEgMThNNSA4VjE4SDVNMTEgOFYxOEgxMVY4TTE3IDhWMThIMTdWOCIvPjwvc3ZnPg==" />
        <view class="info">
          <text class="name">余额支付</text>
          <text class="sub">可用余额 ¥9999.00</text>
        </view>
      </view>
      <radio checked="{{paymentMethod === 'balance'}}" color="#07c160"/>
    </view>
  </view>

  <view class="pay-footer">
    <view class="total-wrap">
      <text>总计:</text>
      <text class="total-num">¥{{orderInfo.totalPrice}}</text>
    </view>
    <button class="btn-submit" bindtap="onPay" loading="{{loading}}">立即支付</button>
  </view>
</view>