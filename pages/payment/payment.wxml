<view class="container" wx:if="{{orderInfo}}">
  
  <view class="header-section">
    <view class="timer-wrapper {{isExpired ? 'expired' : ''}}">
      <text class="timer-label">PAYMENT TIME</text>
      <text class="timer-num">{{remainingTime}}</text>
      <text class="timer-status">{{isExpired ? 'Session Expired' : 'Please pay within 15 mins'}}</text>
    </view>
  </view>

  <view class="content-card">
    <view class="amount-box">
      <text class="currency">¥</text>
      <text class="amount">{{orderInfo.totalPrice}}</text>
      <view class="order-id">Order ID: {{orderInfo.id}}</view>
    </view>

    <view class="divider"></view>

    <view class="payment-list">
      <view class="list-title">PAYMENT METHOD</view>
      
      <view class="pay-row" bindtap="onSelectMethod" data-method="wechat">
        <view class="row-left">
          <view class="icon-block wx"></view>
          <text class="method-name">WeChat Pay</text>
        </view>
        <view class="radio-check {{paymentMethod === 'wechat' ? 'checked' : ''}}">
          <view class="radio-inner"></view>
        </view>
      </view>

      <view class="pay-row" bindtap="onSelectMethod" data-method="balance">
        <view class="row-left">
          <view class="icon-block balance"></view>
          <view class="method-info">
            <text class="method-name">Balance</text>
            <text class="method-sub">Available: ¥9999.00</text>
          </view>
        </view>
        <view class="radio-check {{paymentMethod === 'balance' ? 'checked' : ''}}">
          <view class="radio-inner"></view>
        </view>
      </view>
    </view>
  </view>

  <view class="footer-spacer"></view>

  <view class="footer-bar">
    <view class="total-label">
      <text>Total</text>
      <text class="final-price">¥{{orderInfo.totalPrice}}</text>
    </view>
    
    <button 
      class="btn-pay {{isExpired ? 'disabled' : ''}}" 
      bindtap="onPay" 
      loading="{{loading}}"
      disabled="{{isExpired}}"
    >
      {{isExpired ? 'EXPIRED' : 'PAY NOW'}}
    </button>
  </view>
</view>