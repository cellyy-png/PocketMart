<view class="container" wx:if="{{orderInfo}}">
  
  <view class="countdown-bar {{isExpired ? 'expired' : ''}}">
    <text class="label">{{isExpired ? '订单已超时' : '支付剩余时间'}}</text>
    <view class="timer-box">
      <text class="time">{{remainingTime}}</text>
    </view>
  </view>

  <view class="price-card">
    <view class="label">需支付</view>
    <view class="price">
      <text class="symbol">¥</text>
      <text class="num">{{orderInfo.totalPrice}}</text>
    </view>
    <view class="order-no">订单号: {{orderInfo.id}}</view>
  </view>

  <view class="payment-group">
    <view class="group-title">选择支付方式</view>
    
    <view class="pay-item" bindtap="onSelectMethod" data-method="wechat">
      <view class="left">
        <view class="icon-box wx">
          <text>支</text>
        </view>
        <text class="name">微信支付</text>
      </view>
      
      <view class="radio-circle {{paymentMethod === 'wechat' ? 'active' : ''}}">
        <view class="dot" wx:if="{{paymentMethod === 'wechat'}}"></view>
      </view>
    </view>

    <view class="pay-item" bindtap="onSelectMethod" data-method="balance">
      <view class="left">
        <view class="icon-box balance">
          <text>余</text>
        </view>
        <view class="info">
          <text class="name">余额支付</text>
          <text class="sub">可用余额 ¥9999.00</text>
        </view>
      </view>

      <view class="radio-circle {{paymentMethod === 'balance' ? 'active' : ''}}">
        <view class="dot" wx:if="{{paymentMethod === 'balance'}}"></view>
      </view>
    </view>
  </view>

  <view class="pay-footer">
    <view class="total-wrap">
      <text>总计:</text>
      <text class="total-num">¥{{orderInfo.totalPrice}}</text>
    </view>
    
    <button 
      class="btn-submit {{isExpired ? 'disabled' : ''}}" 
      bindtap="onPay" 
      loading="{{loading}}"
      disabled="{{isExpired}}"
    >
      {{isExpired ? '已超时' : '立即支付'}}
    </button>
  </view>
</view>