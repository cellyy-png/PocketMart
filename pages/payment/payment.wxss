.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
}

.count-down {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.count-down .time {
  color: #ff6b6b;
  font-weight: bold;
}

/* 价格大卡片 */
.price-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 60rpx 0;
  text-align: center;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
}

.price-card .label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.price-card .price {
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.price-card .symbol {
  font-size: 36rpx;
}

.price-card .num {
  font-size: 72rpx;
}

.price-card .order-no {
  font-size: 24rpx;
  color: #ccc;
}

/* 支付方式列表 */
.payment-group {
  background: #fff;
  border-radius: 20rpx;
  padding: 0 30rpx;
}

.group-title {
  padding: 30rpx 0 20rpx;
  font-size: 28rpx;
  color: #999;
}

.pay-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}

.pay-item:last-child {
  border-bottom: none;
}

.pay-item .left {
  display: flex;
  align-items: center;
}

.pay-item .icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 24rpx;
}

.pay-item .name {
  font-size: 30rpx;
  color: #333;
}

.pay-item .info {
  display: flex;
  flex-direction: column;
}

.pay-item .sub {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 底部栏 */
.pay-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.total-wrap {
  font-size: 28rpx;
  color: #333;
}

.total-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-left: 10rpx;
}

.btn-submit {
  background: #07c160;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  margin: 0;
}