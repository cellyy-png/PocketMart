.container {
    min-height: 100vh;
    background: #f7f8fa;
    padding: 24rpx;
    box-sizing: border-box;
  }
  
  /* --- 倒计时条 --- */
  .countdown-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff0f0; /* 淡红色背景提醒 */
    padding: 20rpx;
    border-radius: 12rpx;
    margin-bottom: 24rpx;
  }
  
  .countdown-bar.expired {
    background: #eeeeee; /* 过期变灰 */
  }
  
  .countdown-bar .label {
    font-size: 26rpx;
    color: #666;
    margin-right: 12rpx;
  }
  
  .timer-box {
    display: flex;
    align-items: center;
  }
  
  .countdown-bar .time {
    font-size: 32rpx;
    color: #ff4d4f; /* 醒目的红色数字 */
    font-weight: bold;
    font-family: monospace; /* 等宽字体，数字跳动不抖动 */
  }
  
  .countdown-bar.expired .time {
    color: #999;
  }
  
  /* --- 价格大卡片 --- */
  .price-card {
    background: #fff;
    border-radius: 24rpx;
    padding: 60rpx 0;
    text-align: center;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
  }
  
  .price-card .label {
    font-size: 26rpx;
    color: #999;
    margin-bottom: 16rpx;
  }
  
  .price-card .price {
    color: #333;
    font-weight: bold;
    display: flex;
    align-items: baseline;
    justify-content: center;
  }
  
  .price-card .symbol {
    font-size: 32rpx;
    margin-right: 4rpx;
  }
  
  .price-card .num {
    font-size: 64rpx;
    line-height: 1;
  }
  
  .price-card .order-no {
    font-size: 24rpx;
    color: #ccc;
    margin-top: 24rpx;
  }
  
  /* --- 支付方式列表 --- */
  .payment-group {
    background: #fff;
    border-radius: 24rpx;
    padding: 0 30rpx;
  }
  
  .group-title {
    padding: 30rpx 0 20rpx;
    font-size: 28rpx;
    color: #999;
  }
  
  .pay-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #f9f9f9;
  }
  
  .pay-item:last-child {
    border-bottom: none;
  }
  
  .pay-item .left {
    display: flex;
    align-items: center;
  }
  
  /* 简单的图标样式替代 SVG */
  .icon-box {
    width: 60rpx;
    height: 60rpx;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 24rpx;
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .icon-box.wx {
    background: #07c160;
  }
  
  .icon-box.balance {
    background: #ff9800;
  }
  
  .pay-item .name {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
  }
  
  .pay-item .info {
    display: flex;
    flex-direction: column;
  }
  
  .pay-item .sub {
    font-size: 22rpx;
    color: #999;
    margin-top: 4rpx;
  }
  
  /* 自定义单选圈圈 */
  .radio-circle {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: 2rpx solid #ddd;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }
  
  .radio-circle.active {
    border-color: #333; /* 选中变黑 */
    background: #333;
  }
  
  .radio-circle .dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background: #fff;
  }
  
  /* --- 底部栏 --- */
  .pay-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    padding: 20rpx 40rpx;
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
    box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .total-wrap {
    font-size: 28rpx;
    color: #333;
  }
  
  .total-num {
    font-size: 40rpx;
    font-weight: bold;
    color: #ff4d4f;
    margin-left: 10rpx;
  }
  
  .btn-submit {
    background: #333; /* 黑色按钮 */
    color: #fff;
    font-size: 30rpx;
    font-weight: 500;
    padding: 0 60rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx;
    margin: 0;
  }
  
  .btn-submit.disabled {
    background: #ccc;
    color: #fff;
  }