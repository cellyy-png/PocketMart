/* 引入全局变量 */
page {
  background-color: #F5F5F3;
  --primary: #6B7C85; /* 莫兰迪蓝灰 */
  --accent: #C58F78;  /* 陶土色 */
  --text-main: #2D3436;
  --text-light: #B2BEC3;
  --wx-green: #7BBFA5; /* 莫兰迪绿 */
  --balance-gold: #DBC285; /* 莫兰迪金 */
}

.container {
  min-height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
}

/* --- 头部倒计时 --- */
.header-section {
  background-color: var(--text-main); /* 深色背景 */
  padding: 60rpx 0 120rpx; /* 底部留白给卡片上浮 */
  display: flex;
  justify-content: center;
  text-align: center;
  color: #fff;
}

.timer-label {
  font-size: 20rpx;
  letter-spacing: 4rpx;
  opacity: 0.6;
  margin-bottom: 10rpx;
  display: block;
}

.timer-num {
  font-size: 80rpx;
  font-weight: 600;
  font-family: 'DIN Alternate', sans-serif;
  letter-spacing: 2rpx;
  display: block;
  line-height: 1;
}

.timer-status {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 16rpx;
  display: block;
  font-weight: 300;
}

.timer-wrapper.expired .timer-num {
  opacity: 0.5;
  text-decoration: line-through;
}

/* --- 内容卡片 (悬浮) --- */
.content-card {
  background: #FFFFFF;
  margin: -60rpx 40rpx 0; /* 核心：负边距上浮 */
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(45, 52, 54, 0.08);
  position: relative;
  z-index: 10;
}

/* 金额区域 */
.amount-box {
  text-align: center;
  margin-bottom: 50rpx;
}

.currency {
  font-size: 32rpx;
  color: var(--text-main);
  vertical-align: top;
  margin-right: 4rpx;
  font-weight: 600;
}

.amount {
  font-size: 72rpx;
  color: var(--text-main);
  font-weight: 600;
  font-family: 'DIN Alternate', sans-serif;
}

.order-id {
  font-size: 22rpx;
  color: var(--text-light);
  margin-top: 16rpx;
  letter-spacing: 1rpx;
}

.divider {
  height: 2rpx;
  background: #F9F9F9;
  margin: 0 20rpx 40rpx;
}

/* 支付列表 */
.list-title {
  font-size: 22rpx;
  color: var(--text-light);
  font-weight: 700;
  letter-spacing: 2rpx;
  margin-bottom: 30rpx;
}

.pay-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #F9F9F9;
}

.pay-row:last-child {
  border-bottom: none;
}

.row-left {
  display: flex;
  align-items: center;
}

.icon-block {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  position: relative;
}

.icon-block::after {
  /* 纯CSS绘制简易Logo */
  content: '';
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  width: 30rpx; height: 30rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
}

.icon-block.wx { background: var(--wx-green); }
.icon-block.balance { background: var(--balance-gold); }

.method-info {
  display: flex;
  flex-direction: column;
}

.method-name {
  font-size: 30rpx;
  color: var(--text-main);
  font-weight: 500;
}

.method-sub {
  font-size: 22rpx;
  color: var(--text-light);
  margin-top: 4rpx;
}

/* 自定义单选框动画 */
.radio-check {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.radio-inner {
  width: 20rpx;
  height: 20rpx;
  background: var(--text-main);
  border-radius: 50%;
  transform: scale(0);
  transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.radio-check.checked {
  border-color: var(--text-main);
}

.radio-check.checked .radio-inner {
  transform: scale(1);
}

/* --- 底部悬浮 --- */
.footer-spacer { height: 160rpx; }

.footer-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  background: rgba(255, 255, 255, 0.95);
  padding: 30rpx 50rpx calc(30rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -8rpx 30rpx rgba(0,0,0,0.03);
  backdrop-filter: blur(10px);
  z-index: 99;
}

.total-label {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: var(--text-light);
}

.final-price {
  font-size: 44rpx;
  color: var(--text-main);
  font-weight: 600;
  font-family: 'DIN Alternate', sans-serif;
  margin-top: 4rpx;
}

.btn-pay {
  background: var(--text-main);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 0 80rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 999px;
  margin: 0;
  letter-spacing: 2rpx;
  box-shadow: 0 10rpx 20rpx rgba(45, 52, 54, 0.2);
  transition: all 0.3s;
}

.btn-pay:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(45, 52, 54, 0.2);
}

.btn-pay.disabled {
  background: #E0E0E0;
  box-shadow: none;
  color: #fff;
}