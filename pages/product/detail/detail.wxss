/* ...保留你之前的样式... */
.container { padding-bottom: 120rpx; background: #f5f5f5; min-height: 100vh; }
.gallery { height: 750rpx; background: #fff; }
.gallery-img { width: 100%; height: 100%; }
.info-card { background: #fff; padding: 30rpx; margin-bottom: 20rpx; }
.price-row { color: #ff6b6b; margin-bottom: 20rpx; }
.symbol { font-size: 28rpx; }
.price { font-size: 48rpx; font-weight: bold; margin-right: 20rpx; }
.original { font-size: 26rpx; color: #999; text-decoration: line-through; }
.title { font-size: 32rpx; font-weight: bold; color: #333; margin-bottom: 10rpx; line-height: 1.4; }
.desc { font-size: 26rpx; color: #999; }
.cell-group { background: #fff; padding: 0 30rpx; margin-bottom: 20rpx; }
.cell { height: 100rpx; display: flex; align-items: center; font-size: 28rpx; }
.cell .label { color: #999; width: 80rpx; }
.cell .value { flex: 1; color: #333; }
.cell .arrow { color: #ccc; }
.detail-content { background: #fff; padding: 30rpx; }
.section-title { font-size: 30rpx; font-weight: bold; margin-bottom: 20rpx; padding-left: 16rpx; border-left: 6rpx solid #ff6b6b; }
.footer-bar { position: fixed; bottom: 0; left: 0; right: 0; background: #fff; display: flex; height: 100rpx; padding-bottom: env(safe-area-inset-bottom); box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05); z-index: 90; }
.icons { flex: 1; display: flex; }
.icon-btn { flex: 1; display: flex; flex-direction: column; align-items: center; justify-content: center; font-size: 20rpx; color: #666; }
.icon-btn image { width: 40rpx; height: 40rpx; margin-bottom: 4rpx; }
.btns { flex: 1.5; display: flex; padding: 10rpx 20rpx; }
.btn { flex: 1; display: flex; align-items: center; justify-content: center; font-size: 28rpx; color: #fff; }
.btn.yellow { background: #ffc107; border-top-left-radius: 40rpx; border-bottom-left-radius: 40rpx; }
.btn.red { background: #ff6b6b; border-top-right-radius: 40rpx; border-bottom-right-radius: 40rpx; }
.sku-modal { position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 100; visibility: hidden; }
.sku-modal.show { visibility: visible; }
.mask { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); opacity: 0; transition: opacity 0.3s; }
.sku-modal.show .mask { opacity: 1; }
.content { position: absolute; bottom: 0; left: 0; width: 100%; background: #fff; border-radius: 24rpx 24rpx 0 0; transform: translateY(100%); transition: transform 0.3s; padding-bottom: env(safe-area-inset-bottom); }
.sku-modal.show .content { transform: translateY(0); }
.sku-header { padding: 30rpx; display: flex; position: relative; border-bottom: 1rpx solid #f5f5f5; }
.sku-header image { width: 180rpx; height: 180rpx; border-radius: 8rpx; margin-top: -60rpx; background: #fff; border: 1rpx solid #f5f5f5; }
.sku-info { flex: 1; margin-left: 20rpx; }
.sku-price { color: #ff6b6b; font-size: 36rpx; font-weight: bold; }
.sku-selected { font-size: 24rpx; color: #666; margin-top: 1rpx; }
.close { padding: 10rpx; font-size: 40rpx; color: #999; line-height: 1; }
.sku-body { max-height: 600rpx; padding: 30rpx; box-sizing: border-box; }
.spec-group { margin-bottom: 30rpx; }
.spec-title { font-size: 28rpx; color: #333; margin-bottom: 20rpx; }
.spec-list { display: flex; flex-wrap: wrap; }
.spec-item { padding: 10rpx 30rpx; border: 1rpx solid #f5f5f5; background: #f5f5f5; border-radius: 30rpx; font-size: 26rpx; margin-right: 20rpx; margin-bottom: 20rpx; color: #333; }
.spec-item.active { background: #fff0f0; border-color: #ff6b6b; color: #ff6b6b; }
.qty-row { display: flex; justify-content: space-between; align-items: center; margin-top: 40rpx; margin-bottom: 20rpx; }
.stepper { display: flex; border: 1rpx solid #ddd; border-radius: 8rpx; }
.stepper view { width: 60rpx; height: 50rpx; display: flex; align-items: center; justify-content: center; }
.stepper .num { border-left: 1rpx solid #ddd; border-right: 1rpx solid #ddd; font-size: 26rpx; }
.stepper .minus.disabled { color: #ccc; }
.sku-footer { padding: 20rpx 30rpx; }
.confirm-btn { background: #ff6b6b; color: #fff; height: 80rpx; border-radius: 40rpx; display: flex; align-items: center; justify-content: center; font-size: 30rpx; }

/* --- 【新增/修改】评价卡片样式 --- */
.comment-card {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.section-title-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.more-text {
  font-size: 24rpx;
  color: #999;
}
.comment-preview-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}
.comment-preview-item:last-child {
  margin-bottom: 0;
}
.cp-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: #f0f0f0;
}
.cp-right {
  flex: 1;
}
.cp-top {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}
.cp-name {
  font-size: 26rpx;
  color: #666;
  margin-right: 12rpx;
}
.cp-stars {
  font-size: 20rpx;
  color: #ffc107;
}
.cp-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  /* 限制显示2行 */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}