/* 引入变量 */
page {
  background-color: #F5F5F3;
  --primary: #6B7C85; /* 莫兰迪蓝灰 */
  --accent: #C58F78;  /* 陶土色 */
  --text-main: #2D3436;
  --text-light: #B2BEC3;
  --card-bg: #FFFFFF;
}

.container {
  padding-bottom: env(safe-area-inset-bottom);
}

/* --- 轮播图 --- */
.gallery {
  height: 800rpx; /* 加高显示区域 */
  background: #fff;
}

.gallery-img {
  width: 100%;
  height: 100%;
}

/* --- 信息卡片 (上浮) --- */
.main-card {
  position: relative;
  background: var(--card-bg);
  padding: 40rpx 30rpx;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -40rpx; /* 负边距实现层叠 */
  z-index: 10;
}

.price-header {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.price-group {
  color: var(--accent);
  font-family: 'DIN Alternate', sans-serif;
  margin-right: 16rpx;
}

.symbol { font-size: 32rpx; margin-right: 4rpx; }
.amount { font-size: 56rpx; font-weight: 600; }

.original-price {
  font-size: 26rpx;
  color: var(--text-light);
  text-decoration: line-through;
  font-family: 'DIN Alternate', sans-serif;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-main);
  line-height: 1.4;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.desc {
  font-size: 26rpx;
  color: var(--text-light);
  line-height: 1.6;
}

/* --- 通用单元格 --- */
.cell-group {
  background: var(--card-bg);
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.cell-row {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-top: 1rpx solid #F9F9F9;
}

.label {
  font-size: 20rpx;
  color: var(--text-light);
  width: 100rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-main);
}

.arrow-right {
  width: 14rpx;
  height: 14rpx;
  border-top: 2rpx solid #D1D8DB;
  border-right: 2rpx solid #D1D8DB;
  transform: rotate(45deg);
}

/* --- 评价区 --- */
.comment-section {
  background: var(--card-bg);
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-main);
  letter-spacing: 2rpx;
}

.more-link {
  font-size: 22rpx;
  color: var(--text-light);
}

.comment-item {
  display: flex;
  margin-bottom: 30rpx;
}
.comment-item:last-child { margin-bottom: 0; }

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #F0F2F5;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.comment-body { flex: 1; }

.user-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.username {
  font-size: 26rpx;
  color: #636E72;
}

.star {
  font-size: 20rpx;
  color: #DBC285; /* 姜黄 */
  margin-left: 2rpx;
}

.content-text {
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* --- 详情图文 --- */
.detail-container {
  background: var(--card-bg);
  padding: 40rpx 30rpx;
  min-height: 500rpx;
}

.detail-header {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-main);
  letter-spacing: 2rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

/* --- 核心修复：确保富文本文字可见 --- */
.rich-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-main);
  display: block;
  overflow: hidden;
}

/* --- 底部操作栏 --- */
.footer-spacer { height: 120rpx; }

.footer-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  background: rgba(255, 255, 255, 0.95);
  padding: 20rpx 30rpx calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  box-shadow: 0 -4rpx 24rpx rgba(0,0,0,0.03);
  backdrop-filter: blur(10px);
  z-index: 90;
}

.action-icons {
  display: flex;
  gap: 40rpx;
  margin-right: 40rpx;
}

.icon-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: var(--text-light);
}

/* 纯CSS图标 - 简化版 */
.icon-home, .icon-chat, .icon-cart {
  width: 36rpx; height: 36rpx;
  background: #F0F2F5; /* 占位 */
  margin-bottom: 6rpx;
  border-radius: 4rpx;
}
.icon-home { border: 2rpx solid var(--text-main); background: transparent; }
.icon-chat { border: 2rpx solid var(--text-main); border-radius: 50%; background: transparent; }
.icon-cart { border: 2rpx solid var(--text-main); border-radius: 0 0 4rpx 4rpx; background: transparent; }

.action-btns {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.btn-cart, .btn-buy {
  flex: 1;
  height: 80rpx;
  border-radius: 999px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.btn-cart {
  background: #F0F2F5;
  color: var(--text-main);
}

.btn-buy {
  background: var(--text-main); /* 深灰显贵 */
  color: #fff;
  box-shadow: 0 8rpx 16rpx rgba(45, 52, 54, 0.15);
}

/* --- SKU 弹窗 --- */
.sku-modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 100;
  visibility: hidden;
  transition: visibility 0.3s;
}

.sku-modal.visible { visibility: visible; }

.mask {
  position: absolute;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  opacity: 0;
  transition: opacity 0.3s;
  backdrop-filter: blur(4px);
}

.sku-modal.visible .mask { opacity: 1; }

.modal-content {
  position: absolute;
  bottom: 0; left: 0; right: 0;
  background: var(--card-bg);
  border-radius: 32rpx 32rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.19, 1, 0.22, 1);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.sku-modal.visible .modal-content { transform: translateY(0); }

.modal-header {
  padding: 30rpx;
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
}

.sku-thumb {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  background: #fff;
  margin-top: -60rpx; /* 悬浮突起 */
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  border: 4rpx solid #fff;
}

.sku-meta {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 10rpx;
}

.sku-price {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--accent);
  font-family: 'DIN Alternate', sans-serif;
}

.sku-selected {
  font-size: 24rpx;
  color: var(--text-light);
  margin-top: 4rpx;
}

.btn-close {
  padding: 10rpx;
  font-size: 48rpx;
  color: var(--text-light);
  line-height: 0.5;
}

/* 【关键修复】强制盒模型，避免内边距撑破宽度 */
.modal-body {
  padding: 0 40rpx;
  flex: 1;
  overflow-y: auto;
  box-sizing: border-box; /* 核心 */
  width: 100%;
}

.spec-section { margin-bottom: 40rpx; }

.spec-name {
  font-size: 26rpx;
  color: var(--text-main);
  margin-bottom: 20rpx;
  font-weight: 600;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.option-tag {
  padding: 12rpx 32rpx;
  background: #F5F5F3;
  color: var(--text-main);
  font-size: 24rpx;
  border-radius: 999px;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.option-tag.active {
  background: #E3E8EB; /* 莫兰迪浅蓝 */
  color: var(--primary);
  border-color: var(--primary);
  font-weight: 600;
}

/* 【关键修复】增加右侧留白，确保按钮不被遮挡 */
.qty-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  padding-right: 30rpx; /* 增加30rpx的安全距离 */
  box-sizing: border-box; /* 核心 */
}

.qty-label {
  font-size: 26rpx;
  color: var(--text-main);
  font-weight: 600;
}

.stepper-box {
  display: flex;
  align-items: center;
  background: #F5F5F3;
  border-radius: 999px;
  padding: 4rpx;
}

.step-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: var(--text-main);
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05); /* 阴影收敛一点 */
}

.step-btn.disabled {
  color: #D1D8DB;
  background: transparent;
  box-shadow: none;
}

.step-num {
  width: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: 'DIN Alternate', sans-serif;
  font-weight: 600;
}

.modal-footer {
  padding: 20rpx 30rpx;
}

.btn-confirm {
  height: 88rpx;
  background: var(--text-main);
  color: #fff;
  border-radius: 999px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}