.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #f5f5f5;
  }
  
  .filter-bar {
    display: flex;
    background: #fff;
    height: 88rpx;
    align-items: center;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
    z-index: 10;
  }
  
  .filter-item {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    color: #333;
  }
  
  .filter-item.active {
    color: #ff6b6b;
    font-weight: bold;
  }
  
  .product-list {
    flex: 1;
    padding: 20rpx;
    box-sizing: border-box;
  }
  
  .product-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  
  .no-more {
    text-align: center;
    padding: 30rpx;
    color: #999;
    font-size: 24rpx;
  }