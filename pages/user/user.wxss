.container {
  min-height: 100vh;
  background: var(--bg-color-grey, #F5F5F3);
}

/* --- 头部区域 --- */
.user-header {
  /* 莫兰迪蓝灰主色，替换掉原来的红色渐变 */
  background-color: var(--primary-color, #6B7C85);
  padding: 40rpx 40rpx 100rpx; /* 底部预留空间给卡片插入 */
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
  color: #fff;
}

.user-card {
  display: flex;
  align-items: center;
  position: relative;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 32rpx;
  background: #fff;
}

.info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.desc {
  font-size: 24rpx;
  opacity: 0.8;
  font-weight: 300;
}

/* 纯CSS实现的设置齿轮图标，代替Emoji */
.setting-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.icon-gear {
  width: 24rpx;
  height: 24rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
  position: relative;
}

/* --- 悬浮订单面板 --- */
.order-panel {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin: -60rpx 30rpx 30rpx; /* 核心：负边距实现层叠 */
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(45, 52, 54, 0.06);
  position: relative;
  z-index: 10;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.panel-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3436;
}

.panel-more {
  font-size: 24rpx;
  color: #B2BEC3;
}

.grid-nav {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
}

.nav-col {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.nav-icon {
  width: 52rpx;
  height: 52rpx;
  margin-bottom: 16rpx;
  opacity: 0.8; /* 降低纯黑图标的视觉冲击 */
}

.nav-label {
  font-size: 24rpx;
  color: #636E72;
}

/* 红点代替数字Badge，更极简 */
.badge-point {
  position: absolute;
  top: -4rpx;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  background: var(--danger-color, #C57878);
  border-radius: 50%;
  border: 2rpx solid #fff;
}

/* --- 菜单列表 --- */
.menu-list {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin: 0 30rpx 40rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(45, 52, 54, 0.04);
}

.menu-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 0;
  border-bottom: 1rpx solid #F9F9F9;
}

.menu-row:last-child {
  border-bottom: none;
}

.menu-row:active {
  opacity: 0.6;
}

.row-left {
  font-size: 28rpx;
  color: #2D3436;
  font-weight: 500;
}

/* 纯CSS箭头 */
.row-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #D1D8DB;
  border-right: 3rpx solid #D1D8DB;
  transform: rotate(45deg);
}