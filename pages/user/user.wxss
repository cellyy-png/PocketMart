.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.user-header {
  background: #ff6b6b;
  color: #fff;
  padding: 40rpx 30rpx 60rpx;
  margin-bottom: -40rpx; /* 制造悬浮卡片效果 */
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.3);
  margin-right: 24rpx;
  background: #fff;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.user-level {
  display: inline-block;
  font-size: 20rpx;
  background: rgba(0,0,0,0.2);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 10rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.stat-name {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 卡片通用样式 */
.section-card {
  background: #fff;
  border-radius: 20rpx;
  margin: 0 24rpx 24rpx;
  padding: 0 20rpx;
  position: relative;
  z-index: 1;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid #f9f9f9;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.more {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.arrow {
  margin-left: 6rpx;
  font-family: monospace;
}

/* 订单九宫格 */
.order-grid {
  display: flex;
  padding: 30rpx 0;
}

.grid-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-wrap {
  position: relative;
  margin-bottom: 12rpx;
}

.grid-icon {
  font-size: 48rpx;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -14rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 0 8rpx;
  border-radius: 18rpx;
  border: 2rpx solid #fff;
}

.grid-text {
  font-size: 24rpx;
  color: #666;
}

/* 菜单列表 */
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid #f9f9f9;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-title {
  font-size: 28rpx;
  color: #333;
}

/* 退出登录 */
.logout-area {
  margin: 60rpx 30rpx;
}

.btn-logout {
  background: #fff;
  color: #666;
  font-size: 30rpx;
  border-radius: 44rpx;
  padding: 6rpx 0;
}