.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.score-card {
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label {
  font-size: 30rpx;
  font-weight: bold;
  margin-right: 30rpx;
}

.stars {
  display: flex;
  margin-right: 30rpx;
}

.star {
  font-size: 50rpx;
  color: #ddd;
  margin-right: 10rpx;
  transition: all 0.2s;
}

.star.active {
  color: #ffc107;
}

.score-text {
  font-size: 28rpx;
  color: #999;
}

.content-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  min-height: 400rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete {
  position: absolute;
  right: 0;
  top: 0;
  background: rgba(0,0,0,0.5);
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 32rpx;
  border-bottom-left-radius: 8rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.upload-btn .icon {
  font-size: 60rpx;
  font-weight: 300;
  margin-bottom: 10rpx;
}

.upload-btn .text {
  font-size: 24rpx;
}

.footer {
  margin-top: 60rpx;
}

.submit-btn {
  background: #ff6b6b;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: normal;
}
.submit-btn:active {
  opacity: 0.9;
}