.container {
  padding: 20rpx;
  background-color: #fff;
  min-height: 100vh;
}
.comment-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #eee;
}
.right {
  flex: 1;
}
.top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}
.name { font-size: 28rpx; color: #333; font-weight: bold; }
.time { font-size: 24rpx; color: #999; }
.stars { color: #ffc107; font-size: 24rpx; margin-bottom: 12rpx; }
.content { font-size: 28rpx; color: #333; line-height: 1.5; }
.empty { text-align: center; color: #999; margin-top: 100rpx; }