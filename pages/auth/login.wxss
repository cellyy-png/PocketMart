/* 引入之前的变量，确保风格统一 */
page {
  background-color: var(--bg-color, #FDFCF8);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  color: var(--text-main, #2D3436);
}

.container {
  min-height: 100vh;
  padding: 80rpx 60rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* --- 头部设计 --- */
.header {
  margin-bottom: 80rpx;
}

.brand-en {
  font-size: 24rpx;
  letter-spacing: 4rpx;
  color: var(--primary-color, #6B7C85);
  font-weight: 600;
  text-transform: uppercase;
  margin-bottom: 30rpx;
}

.title-wrapper {
  display: flex;
  flex-direction: column;
}

.title-en {
  font-size: 64rpx;
  font-weight: 300; /* 细体显得更高级 */
  color: #2D3436;
  letter-spacing: 2rpx;
  margin-bottom: 12rpx;
}

.title-zh {
  font-size: 28rpx;
  color: #B2BEC3;
  letter-spacing: 1rpx;
}

/* --- 表单区域 --- */
.form-section {
  width: 100%;
}

.input-item {
  margin-bottom: 50rpx;
  position: relative;
}

.input-label {
  font-size: 20rpx;
  color: var(--primary-color, #6B7C85);
  letter-spacing: 2rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  display: block;
}

.input-field {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #2D3436;
  border-bottom: 2rpx solid #E3E8EB; /* 极简底边框 */
  transition: border-color 0.3s var(--ease-out, ease-out);
}

/* 输入框聚焦效果 */
.input-field:focus {
  border-bottom-color: var(--accent-color, #C58F78);
}

.input-placeholder {
  color: #DFE4EA;
  font-weight: 300;
  font-size: 28rpx;
}

/* --- 主按钮 (莫兰迪深灰) --- */
.btn-main {
  margin-top: 80rpx;
  height: 100rpx;
  background-color: #2D3436; /* 接近纯黑的深灰 */
  color: #FFFFFF;
  border-radius: 999px; /* 全圆角 */
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 60rpx;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
  box-shadow: 0 12rpx 30rpx rgba(45, 52, 54, 0.15);
  transition: all 0.2s;
}

.btn-main:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(45, 52, 54, 0.1);
}

/* 纯CSS箭头 */
.btn-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #FFFFFF;
  border-right: 2rpx solid #FFFFFF;
  transform: rotate(45deg);
}

/* --- 切换模式 --- */
.switch-row {
  margin-top: 40rpx;
  text-align: center;
  font-size: 24rpx;
}

.switch-text {
  color: #B2BEC3;
  margin-right: 12rpx;
}

.switch-link {
  color: var(--accent-color, #C58F78); /* 陶土色强调 */
  font-weight: 600;
  border-bottom: 1rpx solid currentColor;
  padding-bottom: 2rpx;
}

/* --- 分割线 --- */
.divider-box {
  margin: 60rpx 0 40rpx;
  text-align: center;
  position: relative;
}

/* 使用伪元素做线条 */
.divider-box::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 100%;
  height: 1rpx;
  background-color: #F0F0F0;
  z-index: 0;
}

.divider-text {
  background-color: var(--bg-color, #FDFCF8); /* 遮挡线条 */
  padding: 0 20rpx;
  position: relative;
  z-index: 1;
  color: #B2BEC3;
  font-size: 20rpx;
  letter-spacing: 2rpx;
  display: inline-block;
}

/* --- 微信按钮 --- */
.btn-wechat {
  background-color: transparent;
  color: var(--text-main, #2D3436);
  border: 1rpx solid #E3E8EB;
  border-radius: 999px;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 0; /* 重置 */
}

.btn-wechat:active {
  background-color: #F5F5F3;
}

/* --- 底部 --- */
.footer {
  margin-top: auto; /* 沉底 */
  text-align: center;
  font-size: 22rpx;
  color: #B2BEC3;
  padding-bottom: 20rpx;
}

.protocol-link {
  color: var(--text-main, #2D3436);
  font-weight: 500;
}