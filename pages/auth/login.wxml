<view class="container">
  <view class="header">
    <view class="brand-en">PocketMart</view>
    <view class="title-wrapper">
      <text class="title-en">{{isRegister ? 'JOIN US' : 'WELCOME'}}</text>
      <text class="title-zh">{{isRegister ? '注册新账号' : '登录您的账号'}}</text>
    </view>
  </view>

  <view class="form-section">
    <view class="input-item">
      <text class="input-label">ACCOUNT</text>
      <input 
        class="input-field" 
        placeholder="请输入账号/手机号" 
        placeholder-class="input-placeholder"
        model:value="{{account}}" 
        maxlength="20"
      />
    </view>

    <view class="input-item">
      <text class="input-label">PASSWORD</text>
      <input 
        class="input-field" 
        placeholder="请输入密码" 
        placeholder-class="input-placeholder"
        password 
        model:value="{{password}}" 
        maxlength="20"
      />
    </view>

    <view class="input-item" wx:if="{{isRegister}}">
      <text class="input-label">CONFIRM</text>
      <input 
        class="input-field" 
        placeholder="请再次确认密码" 
        placeholder-class="input-placeholder"
        password 
        model:value="{{confirmPassword}}" 
        maxlength="20"
      />
    </view>

    <button class="btn-main" bindtap="onSubmit" loading="{{loading}}">
      <text>{{isRegister ? 'Sign Up' : 'Log In'}}</text>
      <view class="btn-arrow"></view>
    </button>

    <view class="switch-row" bindtap="toggleMode">
      <text class="switch-text">{{isRegister ? 'Already have an account?' : 'New to PocketMart?'}}</text>
      <text class="switch-link">{{isRegister ? 'Login' : 'Register'}}</text>
    </view>

    <block wx:if="{{!isRegister}}">
      <view class="divider-box">
        <view class="divider-text">OR</view>
      </view>

      <button class="btn-wechat" bindtap="onWechatLogin">
        <text>WeChat Login</text>
      </button>
    </block>
  </view>

  <view class="footer">
    <text>登录即代表同意</text>
    <text class="protocol-link">《用户协议》</text>
    <text>和</text>
    <text class="protocol-link">《隐私政策》</text>
  </view>
</view>