.container {
    min-height: 100vh;
    background: #f5f5f5;
    padding-bottom: 180rpx; /* 留出底部按钮空间 */
  }
  
  .address-list {
    padding: 24rpx;
  }
  
  .address-item {
    background: #fff;
    border-radius: 20rpx;
    padding: 32rpx;
    margin-bottom: 24rpx;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
  }
  
  .info-content {
    flex: 1;
    margin-right: 24rpx;
  }
  
  .user-row {
    margin-bottom: 16rpx;
    display: flex;
    align-items: center;
  }
  
  .name {
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-right: 20rpx;
  }
  
  .phone {
    font-size: 30rpx;
    color: #666;
    font-family: Arial, Helvetica, sans-serif;
  }
  
  .tag-default {
    font-size: 20rpx;
    color: #fff;
    background: #ff6b6b;
    padding: 4rpx 10rpx;
    border-radius: 8rpx;
    margin-left: 16rpx;
    line-height: 1;
  }
  
  .address-text {
    font-size: 28rpx;
    color: #333;
    line-height: 1.5;
  }
  
  .edit-btn {
    padding-left: 24rpx;
    border-left: 1rpx solid #eee;
    display: flex;
    align-items: center;
    height: 80rpx;
  }
  
  .edit-icon-text {
    font-size: 26rpx;
    color: #999;
  }
  
  /* 空状态 */
  .empty-state {
    padding-top: 30%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .empty-text {
    color: #999;
    font-size: 28rpx;
    margin-top: 20rpx;
  }
  
  /* 底部按钮优化 */
  .footer-safe-area {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    padding: 20rpx 40rpx;
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
    box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
    z-index: 100;
  }
  
  .btn-add-wrapper {
    height: 88rpx;
    background: linear-gradient(135deg, #ff6b6b, #ff4757);
    border-radius: 44rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 30rpx;
    font-weight: 500;
    box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
    transition: opacity 0.2s;
  }
  
  .btn-add-wrapper:active {
    opacity: 0.9;
  }
  
  .plus-icon {
    font-size: 40rpx;
    margin-right: 12rpx;
    font-weight: 300;
    margin-top: -4rpx; /* 微调对齐 */
  }