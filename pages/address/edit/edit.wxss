.container {
    min-height: 100vh;
    background: #f5f5f5;
    padding: 20rpx;
  }
  
  .form-group {
    background: #fff;
    border-radius: 16rpx;
    padding: 0 30rpx;
    margin-bottom: 30rpx;
  }
  
  .form-item {
    display: flex;
    align-items: center;
    min-height: 100rpx;
    border-bottom: 1rpx solid #f5f5f5;
    font-size: 28rpx;
  }
  
  .form-item:last-child {
    border-bottom: none;
  }
  
  .label {
    width: 160rpx;
    color: #333;
  }
  
  .input, .picker-view, .textarea {
    flex: 1;
    color: #333;
  }
  
  .placeholder {
    color: #999;
  }
  
  .textarea {
    padding: 30rpx 0;
    line-height: 1.5;
  }
  
  .switch-item {
    justify-content: space-between;
  }
  
  .footer-btn {
    margin-top: 60rpx;
  }
  
  .btn-save {
    background: linear-gradient(90deg, #ff6b6b, #ff4757);
    color: #fff;
    border-radius: 44rpx;
    font-size: 32rpx;
    margin-bottom: 30rpx;
  }
  
  .btn-delete {
    background: #fff;
    color: #666;
    border-radius: 44rpx;
    font-size: 32rpx;
  }