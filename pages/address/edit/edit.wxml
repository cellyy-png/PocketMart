<view class="container">
  <form bindsubmit="onSave">
    <view class="form-group">
      <view class="form-item">
        <text class="label">收货人</text>
        <input class="input" name="name" value="{{formData.name}}" placeholder="请填写收货人姓名" />
      </view>
      
      <view class="form-item">
        <text class="label">手机号码</text>
        <input class="input" name="phone" type="number" value="{{formData.phone}}" placeholder="请填写手机号码" maxlength="11" />
      </view>
      
      <view class="form-item">
        <text class="label">所在地区</text>
        <picker mode="region" bindchange="onRegionChange" value="{{region}}">
          <view class="picker-view {{region.length ? '' : 'placeholder'}}">
            {{region.length ? region[0] + ' ' + region[1] + ' ' + region[2] : '省市区县、乡镇等'}}
          </view>
        </picker>
      </view>
      
      <view class="form-item">
        <text class="label">详细地址</text>
        <textarea class="textarea" name="detail" value="{{formData.detail}}" placeholder="街道、楼牌号等" auto-height />
      </view>
      
      <view class="form-item switch-item">
        <text class="label">设为默认地址</text>
        <switch color="#ff6b6b" checked="{{formData.isDefault}}" bindchange="onDefaultChange" />
      </view>
    </view>

    <view class="footer-btn">
      <button class="btn-save" form-type="submit">保存</button>
      <button class="btn-delete" wx:if="{{isEdit}}" bindtap="onDelete">删除收货地址</button>
    </view>
  </form>
</view>