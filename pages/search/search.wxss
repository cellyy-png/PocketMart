/* 引入全局变量 */
page {
  background-color: #FDFCF8; /* 米白 */
  --primary: #6B7C85; /* 莫兰迪蓝灰 */
  --accent: #C58F78;  /* 陶土色 */
  --text-main: #2D3436;
  --text-light: #B2BEC3;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* --- 搜索栏 (修复遮挡问题) --- */
.search-sticky {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(253, 252, 248, 0.95);
  
  /* 适配刘海屏/状态栏高度 */
  padding-top: 40rpx; /* 默认兜底 */
  padding-top: calc(constant(safe-area-inset-top) + 20rpx); /* iOS 11+ */
  padding-top: calc(env(safe-area-inset-top) + 20rpx); /* iOS 11.2+ & Android */
  
  padding-bottom: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  
  display: flex;
  align-items: center;
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
}

.search-bar-box {
  flex: 1;
  height: 72rpx;
  background: #F0F2F5; /* 浅灰底 */
  border-radius: 999px;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  transition: all 0.3s;
}

.icon-search { margin-right: 16rpx; }

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-main);
  height: 100%;
}

.ph-style { color: var(--text-light); font-weight: 300; }

.icon-clear-box {
  padding: 10rpx;
  display: flex;
  align-items: center;
}

.btn-cancel {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 500;
}

/* --- 引导区 (热门/历史) --- */
.suggestion-area {
  padding: 40rpx 30rpx;
}

.section-box { margin-bottom: 60rpx; }

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 22rpx;
  color: var(--text-light);
  letter-spacing: 2rpx;
  font-weight: 600;
}

.btn-clean { color: var(--primary); }

.tag-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  padding: 12rpx 32rpx;
  background: #FFFFFF;
  border: 1rpx solid #E3E8EB;
  border-radius: 999px;
  font-size: 26rpx;
  color: #636E72;
  transition: all 0.2s;
}

.tag-item:active {
  background: #F0F2F5;
  color: var(--text-main);
}

/* --- 结果区 (Grid双列) --- */
.result-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.scroll-view {
  height: 100%;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx; /* 列间距 */
  padding: 20rpx 30rpx;
}

.product-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(45, 52, 54, 0.04);
  transition: transform 0.2s;
}

.product-card:active {
  transform: scale(0.98);
}

.img-box {
  width: 100%;
  padding-bottom: 100%; /* 1:1 正方形占位 */
  position: relative;
  background: #F9F9F9;
}

.p-img {
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  object-fit: cover;
}

.p-info {
  padding: 20rpx;
}

.p-name {
  font-size: 26rpx;
  color: var(--text-main);
  margin-bottom: 16rpx;
  line-height: 1.4;
  height: 72rpx; /* 固定两行高度 */
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.p-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.price-box {
  color: var(--accent);
  font-family: 'DIN Alternate', sans-serif;
  line-height: 1;
}

.symbol { font-size: 24rpx; margin-right: 2rpx; }
.num { font-size: 34rpx; font-weight: 600; }

.sales {
  font-size: 20rpx;
  color: var(--text-light);
  font-weight: 300;
}

/* --- 底部状态 --- */
.footer-state {
  padding: 40rpx 0 60rpx;
  text-align: center;
}

.no-more {
  font-size: 22rpx;
  color: var(--text-light);
  letter-spacing: 2rpx;
}

.empty-box {
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: var(--text-light);
  font-size: 26rpx;
  gap: 20rpx;
}