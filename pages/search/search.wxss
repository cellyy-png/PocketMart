/* pages/search/search.wxss */
.container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-top: 20rpx; /* 在容器顶部添加一些内边距 */
}

/* 搜索栏样式 */
.search-header {
  position: relative; /* 改为相对定位，不固定在顶部 */
  top: auto;
  z-index: 100;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  border-radius: 36rpx;
  margin: 0 30rpx 20rpx; /* 添加左右和底部外边距 */
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05); /* 添加轻微阴影 */
}

.search-bar-wrapper {
  flex: 1;
  background: #f5f5f5;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.search-icon {
  margin-right: 10rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28r px;
  background-color: transparent;
}

.clear-icon {
  margin-left: 10rpx;
  color: #999;
}

.cancel-btn {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 内容区域 */
.search-content {
  padding: 0 30rpx 20rpx;
}

.result-content {
  padding: 0 30rpx;
}

/* 标题样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
  padding: 30rpx 0 0;
}

/* 关键词列表 */
.keyword-list {
  display: flex;
  flex-wrap: wrap;
}

.keyword-item {
  padding: 16rpx 32rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.keyword-text {
  display: block;
}

.history-item {
  background-color: #e0e0e0;
}

/* 历史记录头部 */
.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.clear-history {
  font-size: 24rpx;
  color: #999;
}

/* 商品列表（瀑布流/双列） */
.product-list {
  height: calc(100vh - 260rpx); /* 调整高度计算 */
  padding: 20rpx 0 0; /* 添加顶部内边距 */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-item {
  width: 335rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}

.p-img {
  width: 100%;
  height: 335rpx;
  background: #f0f0f0;
}

.p-info {
  padding: 16rpx 20rpx 0;
}

.p-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  height: 78rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.p-price-row {
  margin-top: 16rpx;
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
  color: #ff4d4f;
}

.price-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-right: 16rpx;
}

.sales {
  font-size: 22rpx;
  color: #999;
}

/* 底部提示 */
.no-more {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx;
}