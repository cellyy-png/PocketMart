/* Global Variables */
page {
  background-color: #F5F5F3;
  --primary: #6B7C85; /* Morandi Blue-Grey */
  --accent: #C58F78;  /* Terracotta */
  --text-main: #2D3436;
  --text-light: #B2BEC3;
  --card-bg: #FFFFFF;
}

.container {
  min-height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
}

/* Header Background for Layering */
.header-bg {
  height: 240rpx;
  background: var(--text-main);
  position: absolute;
  top: 0; left: 0; right: 0;
  z-index: 0;
}

/* Content Wrapper (Floating) */
.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 20rpx 30rpx;
}

/* Common Card Style */
.card {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.03);
}

/* --- Address Card --- */
.address-card {
  display: flex;
  align-items: center;
  min-height: 160rpx;
}

.addr-icon-box {
  width: 80rpx;
  height: 80rpx;
  background: #F0F2F5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

/* CSS Icon for Location */
.icon-location {
  width: 32rpx; height: 32rpx;
  border: 4rpx solid var(--text-main);
  border-radius: 50% 50% 50% 0;
  transform: rotate(-45deg);
  margin-top: -6rpx;
}

.addr-content { flex: 1; }

.user-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: var(--text-main);
  font-family: 'DIN Alternate', sans-serif;
  margin-right: 20rpx;
}

.tag-default {
  background: var(--text-main);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.addr-text {
  font-size: 26rpx;
  color: var(--text-light);
  line-height: 1.4;
}

.no-address {
  width: 100%;
  display: flex;
  justify-content: center;
}

.add-btn {
  display: flex;
  align-items: center;
  color: var(--text-main);
  font-size: 28rpx;
  font-weight: 500;
}

.plus {
  font-size: 40rpx;
  margin-right: 12rpx;
  margin-top: -4rpx;
}

/* Arrow Styles */
.arrow-right {
  width: 16rpx; height: 16rpx;
  border-top: 3rpx solid #D1D8DB;
  border-right: 3rpx solid #D1D8DB;
  transform: rotate(45deg);
}

.arrow-right.small { width: 12rpx; height: 12rpx; }

/* --- Product Card --- */
.card-header {
  font-size: 22rpx;
  color: var(--text-light);
  font-weight: 700;
  letter-spacing: 2rpx;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #F9F9F9;
  padding-bottom: 20rpx;
}

.product-item {
  display: flex;
  margin-bottom: 30rpx;
}

.product-item:last-child { margin-bottom: 0; }

.p-thumb {
  width: 140rpx; height: 140rpx;
  border-radius: 12rpx;
  background: #F9F9F9;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.p-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.p-title {
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.p-sku {
  font-size: 24rpx;
  color: var(--text-light);
  background: #F9F9F9;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.p-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.p-price {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-main);
}

.p-qty {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 26rpx;
  color: var(--text-light);
}

/* --- Summary Card --- */
.cell-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.cell-label {
  font-size: 28rpx;
  color: var(--text-main);
}

.cell-value {
  display: flex;
  align-items: center;
}

.coupon-text {
  font-size: 26rpx;
  color: var(--text-light);
  margin-right: 16rpx;
}

.coupon-text.highlight { color: var(--accent); }

.cell-input {
  text-align: right;
  font-size: 26rpx;
  color: var(--text-main);
  width: 400rpx;
}

.ph-style { color: var(--text-light); }

.divider {
  height: 2rpx;
  background: #F9F9F9;
  margin: 20rpx 0 30rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 26rpx;
}

.price-row .label { color: var(--text-light); }
.price-row .value { color: var(--text-main); font-family: 'DIN Alternate', sans-serif; }
.price-row .value.highlight { color: var(--accent); }

/* --- Footer Bar --- */
.footer-spacer { height: 140rpx; }

.footer-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  background: #fff;
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 24rpx rgba(0,0,0,0.03);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
}

.total-box {
  display: flex;
  flex-direction: column;
}

.total-box .label {
  font-size: 22rpx;
  color: var(--text-light);
}

.total-box .price {
  font-family: 'DIN Alternate', sans-serif;
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-main);
}

.btn-submit {
  background: var(--text-main);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 0 60rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 999px;
  margin: 0;
  box-shadow: 0 8rpx 16rpx rgba(45, 52, 54, 0.15);
}