.container {
    padding-bottom: 120rpx;
    background: #f5f5f5;
    min-height: 100vh;
    padding: 20rpx;
  }
  
  /* 地址卡片 */
  .address-card {
    background: #fff;
    padding: 30rpx;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .addr-top {
    display: flex;
    align-items: center;
    margin-bottom: 12rpx;
  }
  
  .addr-tag {
    background: #ff6b6b;
    color: #fff;
    font-size: 20rpx;
    padding: 2rpx 8rpx;
    border-radius: 4rpx;
    margin-right: 12rpx;
  }
  
  .addr-detail {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 12rpx;
    color: #333;
  }
  
  .user-info {
    font-size: 26rpx;
    color: #666;
  }
  
  .name { margin-right: 20rpx; }
  
 /* 地址卡片 - 无地址状态 */
.no-address {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 120rpx;
    border: 2rpx dashed #ddd; /* 虚线边框 */
    border-radius: 12rpx;
    background: #fcfcfc;
    color: #666;
    font-size: 30rpx;
  }
  
  .add-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44rpx;
    height: 44rpx;
    background: #333;
    color: #fff;
    border-radius: 50%;
    margin-right: 16rpx;
    font-size: 32rpx;
    font-weight: bold;
    padding-bottom: 4rpx; /* 符号微调 */
    box-sizing: border-box;
  }
  
  /* 选中地址后的样式保持不变，但可以加深一点阴影 */
  .address-card {
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  }
  
  
  /* 商品列表 */
  .product-group {
    background: #fff;
    border-radius: 16rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .group-title {
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .product-item {
    display: flex;
    margin-bottom: 20rpx;
  }
  
  .p-img {
    width: 140rpx;
    height: 140rpx;
    border-radius: 8rpx;
    background: #f5f5f5;
    margin-right: 20rpx;
  }
  
  .p-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .p-name {
    font-size: 28rpx;
    color: #333;
    overflow: hidden; text-overflow: ellipsis; white-space: nowrap;
  }
  
  .p-spec {
    font-size: 24rpx;
    color: #999;
  }
  
  .p-price-row {
    display: flex;
    justify-content: space-between;
  }
  
  .p-price { color: #ff6b6b; font-weight: bold; }
  .p-qty { color: #999; }
  
  /* 订单信息 */
  .order-info {
    background: #fff;
    border-radius: 16rpx;
    padding: 0 20rpx;
  }
  
  .info-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 88rpx;
    border-bottom: 1rpx solid #f5f5f5;
    font-size: 28rpx;
  }
  
  .info-row:last-child { border-bottom: none; }
  
  .remark-input {
    text-align: right;
    flex: 1;
    margin-left: 20rpx;
  }
  
  .value.red { color: #ff6b6b; }
  .value.gray { color: #999; }
  
  /* 底部栏 */
  .footer-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    background: #fff;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
    z-index: 100;
  }
  
  .total-wrapper {
    flex: 1;
    display: flex;
    align-items: baseline;
  }
  
  .total-label { font-size: 28rpx; color: #333; margin-right: 10rpx; }
  .total-price { font-size: 36rpx; color: #ff6b6b; font-weight: bold; }
  
  .submit-btn {
    background: #ff6b6b;
    color: #fff;
    border-radius: 40rpx;
    font-size: 28rpx;
    padding: 0 60rpx;
    height: 72rpx;
    line-height: 72rpx;
    margin: 0;
  }