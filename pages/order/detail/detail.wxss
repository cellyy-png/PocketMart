/* 引入变量 */
page {
  background-color: #F5F5F3;
  --primary: #6B7C85; /* 莫兰迪蓝灰 */
  --accent: #C58F78;  /* 陶土色 */
  --text-main: #2D3436;
  --text-light: #B2BEC3;
}

.container {
  min-height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
}

/* --- 头部状态 --- */
.header-status {
  background-color: var(--primary);
  padding: 60rpx 40rpx 120rpx; /* 底部预留给悬浮卡片 */
  color: #fff;
}

.status-main {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.status-sub {
  font-size: 24rpx;
  opacity: 0.8;
  font-weight: 300;
}

/* --- 内容区悬浮 --- */
.content-wrapper {
  padding: 0 24rpx;
  margin-top: -80rpx; /* 核心：层叠效果 */
}

.card-box {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(45, 52, 54, 0.04);
}

/* --- 物流与地址卡片 --- */
.logistics-card, .address-card {
  display: flex;
  align-items: flex-start;
}

/* 纯CSS图标 */
.icon-truck, .icon-location {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
  margin-top: 6rpx;
  background-color: #F0F2F5;
  border-radius: 50%;
}
/* 这里可以用伪元素画简单的图形，或者直接用背景图 */
.icon-truck { border: 2rpx solid var(--primary); } 
.icon-location { border: 2rpx solid var(--accent); }

.card-info { flex: 1; }

.logistics-status {
  color: var(--primary);
  font-weight: 600;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.logistics-desc {
  color: var(--text-light);
  font-size: 24rpx;
}

.user-info {
  margin-bottom: 8rpx;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
  margin-right: 20rpx;
  color: var(--text-main);
}

.phone {
  font-size: 28rpx;
  color: #636E72;
  font-family: 'DIN Alternate', sans-serif;
}

.address-detail {
  font-size: 26rpx;
  color: #636E72;
  line-height: 1.5;
}

/* --- 商品卡片 --- */
.card-title {
  font-size: 24rpx;
  color: var(--text-light);
  font-weight: 600;
  letter-spacing: 2rpx;
  margin-bottom: 30rpx;
}

.goods-item {
  display: flex;
  margin-bottom: 30rpx;
}
.goods-item:last-child { margin-bottom: 0; }

.goods-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background: #F9F9F9;
  margin-right: 24rpx;
}

.goods-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.4;
}

.goods-spec {
  font-size: 22rpx;
  color: var(--text-light);
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.price {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  font-family: 'DIN Alternate', sans-serif;
}

.qty {
  font-size: 26rpx;
  color: var(--text-light);
}

/* --- 信息行 --- */
.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}
.info-row:last-child { margin-bottom: 0; }

.label { color: #9DA6B0; }
.val { color: var(--text-main); }
.val.highlight { color: var(--accent); }

.val-group { display: flex; align-items: center; }

.btn-copy {
  font-size: 18rpx;
  border: 1rpx solid #E0E0E0;
  padding: 2rpx 8rpx;
  margin-left: 12rpx;
  border-radius: 4rpx;
  color: #9DA6B0;
}

.divider {
  height: 1rpx;
  background: #F0F0F0;
  margin: 24rpx 0;
}

.total-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-label {
  font-weight: 600;
  font-size: 30rpx;
}

.total-price {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--accent);
  font-family: 'DIN Alternate', sans-serif;
}

/* --- 底部栏 --- */
.footer-spacer { height: 140rpx; }

.footer-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  background: #FFFFFF;
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.03);
  z-index: 99;
}

.btn-text {
  font-size: 24rpx;
  color: #9DA6B0;
  text-decoration: underline;
}

.action-group {
  display: flex;
  gap: 20rpx;
}

.btn-outline, .btn-primary {
  height: 72rpx;
  padding: 0 40rpx;
  border-radius: 999px;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
}

.btn-outline {
  border: 2rpx solid #E0E0E0;
  color: var(--text-main);
  background: transparent;
}

.btn-primary {
  background: var(--text-main); /* 莫兰迪风格常用深灰代替大红 */
  color: #fff;
  border: 2rpx solid var(--text-main);
  box-shadow: 0 8rpx 16rpx rgba(45, 52, 54, 0.15);
}

.arrow-right {
  width: 14rpx; height: 14rpx;
  border-top: 2rpx solid #D1D8DB;
  border-right: 2rpx solid #D1D8DB;
  transform: rotate(45deg);
}