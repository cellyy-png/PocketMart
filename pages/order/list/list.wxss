.container {
  height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.tabs {
  background: #fff;
  display: flex;
  height: 88rpx;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  height: 100%;
  line-height: 88rpx;
}

.tab-item.active {
  color: #ff6b6b;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #ff6b6b;
  border-radius: 2rpx;
}

.order-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.order-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin-bottom: 24rpx;
}

.shop-name { font-weight: bold; color: #333; }
.status-text { color: #666; }
.status-text.red { color: #ff6b6b; }

.goods-item {
  display: flex;
  margin-bottom: 20rpx;
  background: #fafafa;
  padding: 10rpx;
  border-radius: 8rpx;
}

.goods-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  background: #eee;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 4rpx 0;
}

.goods-name {
  font-size: 26rpx;
  color: #333;
  overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;
}

.goods-spec { font-size: 22rpx; color: #999; }

.goods-price-col {
  text-align: right;
  margin-left: 20rpx;
}

.price { font-size: 28rpx; color: #333; font-weight: bold; }
.qty { font-size: 24rpx; color: #999; margin-top: 8rpx; }

.card-total {
  text-align: right;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
  font-size: 26rpx;
}

.total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 10rpx;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
  gap: 20rpx;
}

.btn {
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin: 0;
  background: #fff;
}

.btn.plain {
  border: 1rpx solid #ddd;
  color: #666;
}

.btn.primary {
  border: 1rpx solid #ff6b6b;
  color: #ff6b6b;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.footer-tip {
  text-align: center;
  color: #ccc;
  font-size: 24rpx;
  padding: 20rpx 0;
}