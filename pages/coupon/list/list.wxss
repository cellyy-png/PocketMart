.container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.tabs {
  background: #fff;
  display: flex;
  height: 88rpx;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  line-height: 88rpx;
  position: relative;
}

.tab-item.active {
  color: #ff6b6b;
  font-weight: bold;
}
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #ff6b6b;
  border-radius: 2rpx;
}

.coupon-list {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

.coupon-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
}

.coupon-left {
  width: 200rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.coupon-item.disabled .coupon-left {
  background: #ccc;
}

.coupon-left .price {
  display: flex;
  align-items: baseline;
}

.coupon-left .symbol {
  font-size: 28rpx;
}

.coupon-left .num {
  font-size: 60rpx;
  font-weight: bold;
}

.coupon-left .condition {
  font-size: 22rpx;
  opacity: 0.9;
  margin-top: 8rpx;
}

.coupon-right {
  flex: 1;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.info {
  flex: 1;
  margin-right: 20rpx;
}

.name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.tag {
  font-size: 20rpx;
  background: #fff0f0;
  color: #ff6b6b;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
  font-weight: normal;
}
.coupon-item.disabled .tag {
  background: #f5f5f5;
  color: #999;
}

.date {
  font-size: 22rpx;
  color: #999;
}

.btn-action {
  padding: 10rpx 24rpx;
  border: 1rpx solid #ff6b6b;
  color: #ff6b6b;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.status-icon {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  opacity: 0.5;
}

.empty-state {
  padding-top: 200rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}