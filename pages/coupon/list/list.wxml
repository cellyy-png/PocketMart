<view class="container">
  <view class="tabs">
    <view 
      class="tab-item {{currentTab == item.key ? 'active' : ''}}" 
      wx:for="{{tabs}}" 
      wx:key="key"
      bindtap="onTabChange"
      data-key="{{item.key}}"
    >
      {{item.name}}
    </view>
  </view>

  <scroll-view class="coupon-list" scroll-y>
    <view 
      class="coupon-card {{item.status != 0 ? 'disabled' : ''}}" 
      wx:for="{{coupons}}" 
      wx:key="id"
      bindtap="onSelect"
      data-item="{{item}}"
    >
      <view class="card-left">
        <view class="price-box">
          <text class="symbol">¥</text>
          <text class="amount">{{item.amount}}</text>
        </view>
        <view class="condition">Over ¥{{item.minPoint}}</view>
      </view>

      <view class="split-line">
        <view class="circle-top"></view>
        <view class="dashed-border"></view>
        <view class="circle-bottom"></view>
      </view>
      
      <view class="card-right">
        <view class="info-group">
          <view class="coupon-name">
            <text class="tag-badge">COUPON</text>
            <text>{{item.name}}</text>
          </view>
          <view class="valid-date">Valid: {{item.startTime}} - {{item.endTime}}</view>
        </view>
        
        <view class="action-area" wx:if="{{item.status == 0}}">
          <view class="btn-use">{{isSelectMode ? 'SELECT' : 'USE NOW'}}</view>
        </view>
        
        <view class="status-stamp" wx:if="{{item.status == 1}}">USED</view>
        <view class="status-stamp" wx:if="{{item.status == 2}}">EXPIRED</view>
      </view>
    </view>

    <view class="empty-state" wx:if="{{!loading && coupons.length == 0}}">
      <view class="empty-icon-box"></view>
      <text class="empty-text">No coupons found</text>
    </view>
  </scroll-view>
</view>