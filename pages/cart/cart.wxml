<view class="container">
  <!-- 购物车为空时的展示 -->
  <view class="empty-state" wx:if="{{isEmpty}}">
    <image class="empty-img" src="{{emptyImage}}" mode="aspectFit"></image>
    <view class="empty-text">Shopping Bag is Empty</view>
    <view class="empty-sub">Looks like you haven't made your choice yet</view>
    <button class="go-shop-btn" bindtap="onGoShopping">START SHOPPING</button>
  </view>

  <!-- 购物车有商品时的展示 -->
  <view class="cart-list" wx:else>
    <view class="cart-item" wx:for="{{cartList}}" wx:key="id">
      <text>商品内容...</text>
    </view>
  </view>
</view>