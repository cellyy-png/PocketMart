page {
    background-color: #F5F5F7; /* 极简灰白背景 */
    height: 100%;
  }
  
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    padding: 0 40rpx;
    box-sizing: border-box;
  }
  
  /* 空状态容器 */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin-top: -120rpx; /* 视觉中心微调 */
  }
  
  /* 插画 */
  .empty-img {
    width: 240rpx;
    height: 240rpx;
    margin-bottom: 50rpx;
    opacity: 0.9;
  }
  
  /* 标题 */
  .empty-text {
    font-size: 34rpx;
    color: #2c2c2c;
    font-weight: 600;
    margin-bottom: 16rpx;
    letter-spacing: 0.5px;
  }
  
  /* 副标题 */
  .empty-sub {
    font-size: 26rpx;
    color: #9aa0a6;
    margin-bottom: 80rpx;
    text-align: center;
  }
  
  /* 按钮 - 高级黑金风 */
  .go-shop-btn {
    min-width: 340rpx;
    height: 96rpx;
    line-height: 96rpx;
    background: #2c2c2c;
    color: #ffffff;
    font-size: 26rpx;
    font-weight: 600;
    border-radius: 4rpx;
    letter-spacing: 2px;
    box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.1);
    border: none;
  }
  
  .go-shop-btn::after {
    border: none;
  }