.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.cart-list {
  padding: 20rpx 0;
}

.cart-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.item-checkbox {
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  margin: 0 20rpx;
}

.item-detail {
  flex: 1;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-info-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  width: 340rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-delete {
  font-size: 24rpx;
  color: #999;
  padding: 0 10rpx;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  background: #f8f8f8;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  align-self: flex-start;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.item-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.quantity-control {
  display: flex;
  align-items: center;
  border: 1rpx solid #eee;
  border-radius: 4rpx;
}

.quantity-btn {
  width: 50rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f9f9f9;
  color: #666;
  font-size: 28rpx;
}

.quantity-btn.disabled {
  color: #ccc;
  background: #fdfdfd;
}

.quantity-input {
  width: 70rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
}

/* 底部结算栏 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 100;
  padding-bottom: env(safe-area-inset-bottom);
}

.footer-left {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  margin-right: 30rpx;
}

.footer-text {
  margin-left: 10rpx;
}

.footer-center {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
}

.total-label {
  font-size: 26rpx;
  color: #333;
}

.total-price {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-left: 10rpx;
}

.checkout-btn {
  width: 200rpx;
  height: 76rpx;
  background: #ccc;
  color: #fff;
  border-radius: 38rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.checkout-btn.active {
  background: #ff6b6b;
}

/* 空状态 */
.empty-cart {
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-sub {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.btn-go-shop {
  width: 240rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #333;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}