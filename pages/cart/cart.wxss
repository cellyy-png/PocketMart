.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  height: 88rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  position: sticky;
  top: 0;
  z-index: 10;
}

.edit-btn {
  color: #666;
}

.cart-list {
  padding: 20rpx;
}

.cart-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.checkbox {
  padding: 20rpx 20rpx 20rpx 0;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background: #f8f8f8;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-spec {
  font-size: 24rpx;
  color: #999;
  background: #f8f8f8;
  align-self: flex-start;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
}

.price-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  color: #ff6b6b;
  font-size: 32rpx;
  font-weight: bold;
}

.stepper {
  display: flex;
  border: 1rpx solid #eee;
  border-radius: 4rpx;
}

.stepper .btn {
  width: 50rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  background: #f9f9f9;
}

.stepper .num {
  width: 60rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
}

/* 底部栏 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 90;
}

.check-all {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.check-all .label {
  margin-left: 10rpx;
}

.total-info {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.total-info .price {
  color: #ff6b6b;
  font-weight: bold;
  font-size: 36rpx;
}

.action-btn {
  background: #ff6b6b;
  color: #fff;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.action-btn.disabled {
  background: #ccc;
}