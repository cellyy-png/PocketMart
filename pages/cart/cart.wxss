.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 购物车列表 */
.cart-list {
  padding: 20rpx 0;
}

.cart-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.item-checkbox {
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.item-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.quantity-btn {
  width: 48rpx;
  height: 48rpx;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #333;
}

.quantity-btn.disabled {
  opacity: 0.3;
}

.quantity-input {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.item-delete {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 10rpx;
  font-size: 32rpx;
  color: #999;
}

/* 底部操作栏 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
}

.footer-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #333;
}

.footer-center {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
}

.total-label {
  font-size: 24rpx;
  color: #999;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-left: 8rpx;
}

.checkout-btn {
  min-width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #ccc;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.checkout-btn.active {
  background: #ff6b6b;
}

/* 空状态按钮 */
.empty-btn {
  margin-top: 40rpx;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #ff6b6b;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}