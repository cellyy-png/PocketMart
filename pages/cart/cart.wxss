/* 全局容器 */
page {
    background-color: #F7F8FA;
    min-height: 100%;
  }
  
  .page-container {
    padding: 24rpx;
    box-sizing: border-box;
  }
  
  /* --- 商品卡片 --- */
  .cart-card {
    display: flex;
    align-items: center;
    background: #ffffff;
    border-radius: 20rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
  }
  
  /* 1. 复选框区域 */
  .checkbox-area {
    padding-right: 24rpx;
    display: flex;
    align-items: center;
    height: 100%;
  }
  
  .custom-checkbox {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: 2rpx solid #dcdcdc;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    background-color: #fff;
  }
  
  .custom-checkbox.active {
    background-color: #333333;
    border-color: #333333;
  }
  
  .check-icon {
    color: #fff;
    font-size: 24rpx;
    font-weight: bold;
  }
  
  /* 2. 图片区域 */
  .img-box {
    width: 180rpx;
    height: 180rpx;
    flex-shrink: 0;
    border-radius: 12rpx;
    overflow: hidden;
    background-color: #f0f0f0;
    margin-right: 24rpx;
  }
  
  .thumb {
    width: 100%;
    height: 100%;
  }
  
  /* 3. 信息区域 */
  .info-box {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 180rpx;
  }
  
  .top-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  
  .title {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-right: 20rpx;
  }
  
  .delete-icon {
    font-size: 40rpx;
    color: #ccc;
    line-height: 0.8;
    padding: 0 0 20rpx 20rpx;
  }
  
  .sku-tag {
    font-size: 22rpx;
    color: #999;
    background-color: #f5f5f5;
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    align-self: flex-start;
  }
  
  .bottom-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }
  
  .price-box {
    color: #ff4d4f;
    font-weight: bold;
  }
  .symbol { font-size: 24rpx; }
  .num { font-size: 34rpx; }
  
  /* 步进器 */
  .stepper {
    display: flex;
    align-items: center;
    background: #f7f8fa;
    border-radius: 8rpx;
  }
  
  .step-btn {
    width: 50rpx;
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    color: #333;
  }
  
  .step-btn.disabled { color: #e0e0e0; }
  
  .step-num {
    font-size: 26rpx;
    min-width: 50rpx;
    text-align: center;
    font-weight: 500;
  }
  
  /* --- 底部悬浮栏 --- */
  .footer-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 110rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;
    padding-bottom: env(safe-area-inset-bottom);
    box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
    z-index: 99;
  }
  
  .left-action {
    display: flex;
    align-items: center;
  }
  
  .select-txt {
    font-size: 28rpx;
    color: #666;
    margin-left: 16rpx;
  }
  
  .right-action {
    display: flex;
    align-items: center;
  }
  
  .total-info {
    margin-right: 24rpx;
    display: flex;
    align-items: baseline;
  }
  
  .label {
    font-size: 24rpx;
    color: #333;
    margin-right: 8rpx;
  }
  
  .price-symbol {
    font-size: 24rpx;
    color: #ff4d4f;
    font-weight: bold;
  }
  
  .total-price {
    font-size: 38rpx;
    color: #ff4d4f;
    font-weight: bold;
  }
  
  .checkout-btn {
    width: 220rpx;
    height: 80rpx;
    background: #333;
    color: #fff;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.2s;
  }
  
  .checkout-btn.disabled {
    background: #ccc;
    pointer-events: none;
  }
  
  /* --- 空状态 --- */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 200rpx;
  }
  
  .empty-img {
    width: 240rpx;
    height: 240rpx;
    margin-bottom: 30rpx;
  }
  
  .empty-text {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 12rpx;
  }
  
  .empty-sub {
    font-size: 26rpx;
    color: #999;
    margin-bottom: 50rpx;
  }
  
  .go-shop-btn {
    width: 240rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #333;
    color: #fff;
    font-size: 28rpx;
    border-radius: 40rpx;
  }