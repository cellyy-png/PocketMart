.product-card {
  display: flex;
  flex-direction: column;
  background: var(--card-bg);
  border-radius: var(--radius-md);
  overflow: hidden;
  position: relative;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s var(--ease-spring);
  /* 修复iOS圆角 */
  transform: translateZ(0);
}

/* 按下时的微交互：轻微缩小 */
.product-card:active {
  transform: scale(0.98);
  box-shadow: none;
}

.image-wrapper {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* 强制 1:1 正方形 */
  background: var(--bg-color);
}

.product-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.title-group {
  margin-bottom: 16rpx;
}

.product-name {
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.5;
  font-weight: 500;
  letter-spacing: 1rpx;
  margin-bottom: 6rpx;
}

.product-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.product-bottom {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.price-wrapper {
  display: flex;
  align-items: baseline;
}

.price-box {
  color: var(--accent-color);
  font-family: 'DIN Alternate', sans-serif; /* 数字专用字体 */
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.price-value {
  font-size: 34rpx;
  font-weight: 600;
}

.price-original {
  font-size: 20rpx;
  color: var(--text-secondary);
  text-decoration: line-through;
  margin-left: 12rpx;
}

.action-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4rpx;
}

.sales-text {
  font-size: 20rpx;
  color: var(--text-secondary);
  background: var(--bg-color);
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

/* 圆形添加按钮 */
.add-btn {
  width: 48rpx;
  height: 48rpx;
  background: var(--bg-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s;
}

.add-btn:active {
  background: var(--primary-fade);
}

.cart-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 标签样式 - 磨砂玻璃 */
.product-tags {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border-radius: 8rpx;
  color: var(--text-main);
  /* Glassmorphism 核心 */
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(8px); 
  -webkit-backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.5);
  font-weight: 500;
}