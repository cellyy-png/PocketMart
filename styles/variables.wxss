/* 全局CSS变量定义 - 日系商业高级风 (Morandi Style) */
page {
  /* --- 莫兰迪主色调 (Muted Blue-Grey) --- */
  --primary-color: #6B7C85; 
  --primary-light: #E3E8EB;
  --primary-dark: #4A5860;
  
  /* --- 辅助色 (Accent) --- */
  --accent-color: #C58F78;
  --accent-light: #F2E6E1;
  
  /* --- 功能色 --- */
  --success-color: #8DA399; /* 鼠尾草绿 */
  --warning-color: #DBC285; /* 姜黄 */
  --danger-color: #C57878;  /* 干燥玫瑰红 */

  /* --- 文字系统 --- */
  --text-main: #2D3436;    
  --text-medium: #636E72;  
  --text-light: #B2BEC3;   
  --text-white: #FFFFFF;

  /* --- 背景系统 --- */
  --bg-color: #FDFCF8;     /* 页面背景：暖米白 */
  --bg-color-grey: #F5F5F3;/* 灰色块背景 */
  --card-bg: #FFFFFF;      /* 卡片背景 */

  /* --- 边框与阴影 --- */
  --border-color: #F0F0F0;
  /* 优化后的弥散阴影：更轻、更远 */
  --shadow-sm: 0 4rpx 12rpx rgba(45, 52, 54, 0.05);
  --shadow-md: 0 8rpx 24rpx rgba(45, 52, 54, 0.08);
  --shadow-lg: 0 16rpx 48rpx rgba(45, 52, 54, 0.12);

  /* --- 布局圆角 --- */
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-full: 999px;

  /* --- 动画曲线 --- */
  --ease-out: cubic-bezier(0.215, 0.61, 0.355, 1);
  --ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
}