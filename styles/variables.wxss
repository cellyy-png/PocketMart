/* 全局CSS变量定义 */
page {
  /* 主题色 */
  --primary-color: #ff6b6b;
  --primary-light: #ff8585;
  --primary-dark: #e05e5e;
  
  /* 辅助色 */
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #ff4d4f;
  
  /* 文字颜色 */
  --text-main: #333333;
  --text-regular: #666666;
  --text-secondary: #999999;
  --text-placeholder: #cccccc;
  
  /* 边框与背景 */
  --border-color: #eeeeee;
  --bg-color: #f5f5f5;
  --bg-white: #ffffff;
  
  /* 间距 */
  --spacing-xs: 10rpx;
  --spacing-sm: 20rpx;
  --spacing-md: 30rpx;
  --spacing-lg: 40rpx;
  
  /* 圆角 */
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-round: 999rpx;
}