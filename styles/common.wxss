/* 通用样式库 - 增强版 */

/* 布局 */
.flex-row { display: flex; flex-direction: row; align-items: center; }
.flex-col { display: flex; flex-direction: column; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.flex-between { display: flex; align-items: center; justify-content: space-between; }
.flex-1 { flex: 1; }
.flex-wrap { flex-wrap: wrap; }

/* 间距辅助 */
.gap-xs { gap: 8rpx; }
.gap-sm { gap: 16rpx; }
.gap-md { gap: 24rpx; }

/* 文本 */
.text-truncate { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
.text-truncate-2 { overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; }

/* 字体排版 */
.fs-24 { font-size: 24rpx; letter-spacing: 0.5rpx; }
.fs-26 { font-size: 26rpx; letter-spacing: 0.5rpx; }
.fs-28 { font-size: 28rpx; font-weight: 500; letter-spacing: 1rpx; } /* 增加字间距 */
.fs-32 { font-size: 32rpx; font-weight: 600; }
.fs-36 { font-size: 36rpx; font-family: 'DIN Alternate', sans-serif; font-weight: bold; } /* 数字用特种字体 */

/* 颜色应用 */
.text-primary { color: var(--primary-color); }
.text-accent { color: var(--accent-color); }
.text-main { color: var(--text-main); }
.text-regular { color: var(--text-regular); }
.text-secondary { color: var(--text-secondary); }
.bg-white { background-color: var(--card-bg); }

/* 组件：通用卡片容器 */
.card-box {
  background: var(--card-bg);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
  padding: 24rpx;
  margin-bottom: 20rpx;
  /* 解决iOS圆角溢出 */
  transform: translateZ(0);
}

/* 组件：高级按钮 */
.btn-primary {
  background: var(--primary-color);
  color: #fff;
  border-radius: var(--radius-full);
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-shadow: 0 8rpx 16rpx rgba(121, 142, 150, 0.3);
  transition: all 0.3s;
}

/* 交互反馈 */
.btn-hover { opacity: 0.85; transform: scale(0.97); }